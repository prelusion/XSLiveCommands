{
    "asar": false,
    "extraFiles": [],
    "publish": [
        {
            "provider": "generic",
            "url": "http://127.0.0.1"
        }
    ],
    "productName": "XS Live Commands",
    "artifactName": "${productName} v${version} Setup ${os}-${arch}.${ext}",
    "appId": "org.aoe2.xs-live-commands",
    "directories": {
        "output": "build/${os}/${arch}/"
    },
    "files": [
        "dist/electron/**/*"
    ],
    "dmg": {
        "contents": [
            {
                "x": 410,
                "y": 150,
                "type": "link",
                "path": "/Applications"
            },
            {
                "x": 130,
                "y": 150,
                "type": "file"
            }
        ]
    },
    "mac": {
        "icon": "build/icons/icon.icns"
    },
    "win": {
        "icon": "build/icons/icon.ico"
    },
    "linux": {
        "icon": "build/icons"
    }
}
